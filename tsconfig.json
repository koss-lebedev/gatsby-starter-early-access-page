{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "strict": true,
    "target": "es2015",
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",
    "types": ["node"],
    "baseUrl": "src",
    "esModuleInterop": true,
    "noEmit": true
  },
  "include": ["./src/**/*"]
}
